{{> nav}}

<h1>User Profile</h1>

<p id="usename">{{user.name}}</p>

<div id="profile">
  <form>
    <div class="form-group row">
      <label for="_id" class="col-sm-2 col-form-label">ID</label>
      <div class="col-sm-10">
        <input type="text" class="form-control-plaintext" name="_id" id="_id" value="{{user._id}}" readonly>
      </div>
    </div>
    <div class="form-group row">
      <label for="email" class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="email" id="email">
      </div>
    </div>
    <div class="form-group row">
      <label for="realName" class="col-sm-2 col-form-label">User Name</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="realName" id="realName">
      </div>
    </div>
    <div class="form-group row">
      <label for="handicap" class="col-sm-2 col-form-label">handicap</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" name="handicap" id="handicap">
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-secondary" id="cancel">Cancel</button>
      </div>
    </div>

  </form>
</div>


<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
