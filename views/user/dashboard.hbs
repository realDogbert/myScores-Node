<h1>Dashboard</h1>
<input id="user_id" name="player_id" value="{{user._id}}" hidden></input>
<p>
    <select id="courseSelector"></select>
    <button class="btn btn-primary" id="newRound">New Round</button>
</p>


<div>
    <canvas id="pie" width="400" height="100"></canvas>
</div>

<div>
    <canvas id="chart" width="400" height="100"></canvas>
</div>

<p>
    <table class="table table-sm table-striped table-hover">
        <caption>Rounds played</caption>
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Spielvorgabe</th>
                <th scope="col">Course</th>
                <th scope="col">Score</th>
                <th scope="col">Brutto</th>
                <th scope="col">Netto</th>
            </tr>
        </thead>
        <tbody  id="rounds">

        </tbody>
    </table>
</p>

