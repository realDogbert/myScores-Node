<h1>
    <i class="material-icons md-36">dashboard</i>
    Dashboard
</h1>

<div class="row">
    <div class="col-md-3">

        <div class="card" style="width: 18rem;">
        <div class="card-header">
            <h4>Übersicht</h4>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <div>Golfclub Ebersberg</div>
                <ul>
                    <li>Sepp Maier Platz <i class="material-icons">play_arrow</i></li>
                    <li>18 Loch Platz</li>
                </ul>
            </li>
            <li class="list-group-item">
                <div>Golfclub Schloss Egmating</div>
                <ul>
                    <li>9 Loch Platz</li>
                    <li>18 Loch Platz</li>
                </ul>
            </li>
        </ul>
        </div>

    </div>
    <main class="col-md-9">

        <div class="card">
            <div class="card-header">
                <h4>Statistik</h4>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-md-4">
                        <div class="content-box">
                            <h2><i class="material-icons md-48" id="clubNew">golf_course</i> <div id="numOfRounds">0</div></h2>
                            <h4>Runden</h4>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="content-box">
                            <h2><i class="material-icons md-48" id="clubNew">list</i> <div id="numOfStrokes">0</div></h2>
                            <h4>Schläge</h4>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="content-box">
                            <h2><i class="material-icons md-48" id="clubNew">trending_up</i> <div id="bruttoPar">0</div></h2>
                            <h4>Par+</h4>
                        </div>
                    </div>
                </div>


            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h4>Übersicht Runden</h4>
            </div>
            <div class="card-body">

                <table class="table table-sm table-striped table-hover">
                    <caption>Gespielte Runden</caption>
                    <thead>
                        <tr>
                            <th scope="col">Datum</th>
                            <th scope="col">Spielvorgabe</th>
                            <th scope="col">Platz</th>
                            <th scope="col">Score</th>
                            <th scope="col">Brutto</th>
                            <th scope="col">Netto</th>
                        </tr>
                    </thead>
                    <tbody  id="rounds">

                    </tbody>
                </table>

            </div>
        </div>

    </main>
</div>








