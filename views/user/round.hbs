{{> nav}}

<h2 id="course_name"></h2>

<form>

    <input id="user_id" name="player_id" value="{{user._id}}" hidden></input>
    <input id="course_id" name="course_id" value="{{course_id}}" hidden></input>

    <div class="row">
        <div class="col">Date <input name="date" type="datetime" class="form-control"></div>
        <div class="col">Spielvorgabe <input name="spielvorgabe" type="number" value="{{user.handicap}}" class="form-control"></div>
        <div class="col">Tee <select name="tees" class="custom-select"></select></div>
    </div>

    <div style="margin-top: 30px">
        <table class="table table-sm table-striped table-hover">
            <thead>
                <th>Hole</th>
                <th>Length<div id="crsl">CR/SL</div></th>
                <th>Par</th>
                <th>HCP</th>
                <th></th>
                <th>Score</th>
                <th>Brutto</th>
                <th>Netto</th>
            </thead>
            <tbody id="holes"></tbody>
            <tr>
                <th></th>
                <th></th>
                <th id="sumPar"></th>
                <th></th>
                <th></th>
                <th id="sum"></th>
                <th id="sumBrutto"></th>
                <th id="sumNetto"></th>
            </tr>
        </table>

        <button type="submit" class="btn btn-primary" id="save">Save</button>
        <button class="btn btn-secondary" id="cancel">Cancel</button>
    </div>

</form>

<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
