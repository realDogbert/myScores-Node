{{> apiKey}}
{{> nav}}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/admin">Administration</a></li>
    <li class="breadcrumb-item"><a href="/admin/clubs">Club Management</a></li>
    <li class="breadcrumb-item"><a href="/admin/clubs/" id="nav_club">{{clubName}}</a></li>
    <li class="breadcrumb-item active"  aria-current="page" id="nav_course">
      {{#if create}}New Course{{else}}Course Name{{/if}}
    </li>
  </ol>
</nav>

<div class="container-fluid">

  <div class="card">
    <div class="card-header">
      <h4>
        {{#if create}}
        <h4>New Course</h4>
        {{else}}
        <h4>Course Details</h4>
        {{/if}}
      </h4>
    </div>
    <div class="card-body">

  <form>

      {{#unless create}}
        <input type="text" id="course_id" value="{{courseId}}" hidden>
      {{/unless}}
      <input type="text" id="clubId" value="{{clubId}}" hidden>

      <div class="row">
        <div class="col-md-5">

          <div class="form-group">
            <label for="courseName">Course Name</label>
            <input class="form-control" type="text" id="courseName">
          </div>

        </div>
        <div class="col-md-5">

          <div class="form-group">
            <label for="clubName">Club Name</label>
            <input class="form-control" type="text" id="clubName" value="{{clubName}}">
          </div>

        </div>
        <div class="col-md-2">

          <div class="form-group">
            <label for="numOfHoles">Number of Holes</label>
            <select class="form-control" id="numOfHoles">
              <option selected>9</option>
              <option>18</option>
            </select>
          </div>

        </div>
      </div>

      <table class="table table-sm table-striped table-hover">
        <thead>
          <tr>
            <th>CR</th>
            <td><input class="form-control" type="number" name="crWhite" id="crWhite"></td>
            <td><input class="form-control" type="number" name="crBlue" id="crBlue"></td>
            <td></td>
            <td><input class="form-control" type="number" name="crYellow" id="crYellow"></td>
            <td><input class="form-control" type="number" name="crRed" id="crRed"></td>
            <td></td>
          </tr>
          <tr>
            <th>SL</th>
            <td><input class="form-control" type="number" name="slWhite" id="slWhite"></td>
            <td><input class="form-control" type="number" name="slBlue" id="slBlue"></td>
            <td></td>
            <td><input class="form-control" type="number" name="slYellow" id="slYellow"></td>
            <td><input class="form-control" type="number" name="slRed" id="slRed"></td>
            <td></td>
          </tr>
          <tr>
            <th>Number</th>
            <th>Man</th>
            <th>Woman</th>
            <th>Par</th>
            <th>Man</th>
            <th>Woman</th>
            <th>HCP</th>
          </tr>
        </thead>
        <tbody id="holesForm"></tbody>
      </table>

      <button type="submit" class="btn btn-primary">Submit</button>
      <button type="button" class="btn btn-secondary" id="cancel">Cancel</button>

  </form>


    </div>
  </div>

</div>

<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>


{{#if create}}
    <script src="/javascripts/admin/courseNew.js"></script>
{{else}}
    <script src="/javascripts/admin/courseDetails.js"></script>
{{/if}}