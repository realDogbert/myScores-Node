{{> nav}}

<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Administration</a></li>
        <li class="breadcrumb-item active" aria-current="page">Club Management</li>
      </ol>
    </nav>
  </div>
</div>

<h1>
  <i class="material-icons md-36">location_on</i>
  Club Management
  <i class="material-icons" id="clubNew">add_circle_outline</i>
</h1>

<div class="row">
  <div class="col-md-3">

    <div class="card">
      <div class="card-header">
          <h4>
              Actions
          </h4>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Add new Club</li>
        <li class="list-group-item">Search Club</li>
      </ul>
    </div>

  </div>
  <div class="col-md-9">

    <div class="card">
      <div class="card-header">

        <h4>
          <input type="text" class="form-control" id="search" placeholder="Search">
        </h4>

      </div>
      <div class="card-body">

        <table class="table table-sm table-striped table-hover">
          <thead>
            <tr>
              <th>Club Name</th>
              <th>Club Location</th>
              <th>WebSite</th>
            </tr>
          </thead>
          <tbody id="result">
            {{#each clubs}}
              <tr id="{{_id}}">
                <td>
                  <a href="/admin/clubs/{{_id}}">{{name}}</a>
                </td>
                <td>{{address.street}}<br>{{address.zip}} {{address.country}}</td>
                <td>{{contact.website}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>

      </div>
    </div>
    

  </div>
</div>

