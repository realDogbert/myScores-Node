<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Administration</a></li>
        <li class="breadcrumb-item active" aria-current="page">Club Management</li>
      </ol>
    </nav>
  </div>
</div>

<div class="row">
  <div class="col-8">
    <h1>
      Club
      <i class="material-icons" id="clubNew">add_circle_outline</i>
    </h1>
  </div>
  <div class="col-4">
    <input type="text" class="form-control" id="search" placeholder="Search">
  </div>
</div>

<div class="row">
  <div class="col-12">
    <table class="table table-sm table-striped table-hover">
      <thead>
        <tr>
          <th>Club Name</th>
          <th>Club Location</th>
          <th>WebSite</th>
        </tr>
      </thead>
      <tbody id="result">
        {{#each clubs}}
          <tr id="{{_id}}">
            <td>
              <a href="/admin/clubs/{{_id}}">{{name}}</a>
            </td>
            <td>{{address.country}}</td>
            <td>{{contact.website}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

