<h1>User Management</h1>

<div id="profile">
  <form>
    <input type="hidden" class="form-control" name="_id" value="{{profile._id}}">
    <input type="text" class="form-control" name="userName" value="{{profile.name}}">
    <input type="text" class="form-control" name="email" value="{{profile.email}}">
    <input type="text" class="form-control" name="realName" value="{{profile.realName}}">
    
    <input type="checkbox" class="form-check-input" name="isAdmin">
    <label class="form-check-label" for="isAdmin">Admin</label>


    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>


