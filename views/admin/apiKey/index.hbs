{{> apiKey}}
{{> nav}}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/admin">Administration</a></li>
    <li class="breadcrumb-item active" aria-current="page">API Key Management</li>
    </ol>
</nav>


<div class="container-fluid">

    <h1>
        <i class="material-icons md-36">location_on</i>
        API Key Management
    </h1>

    <h2>New Key</h2>
    <form action="/admin/apiKey/create" method="post">

        <div class="row">
            <div class="col-md-8">
                <input class="form-control" type="text" name="aud">
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">Create API Key</button>
            </div>
        </div>
        
        
    </form>

    {{ error }}

    <h2>Keys</h2>
    <div id="keys">

    <table class="table table-sm table-striped table-hover">

        <thead>
            <tr>
                <th>ISS</th>
                <th>AUD</th>
                <th>dateCreated</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
        {{#each token}}
            <tr id="{{_id}}">
                <td>{{ payload.iss }}</td>
                <td>{{ payload.aud }}</td>
                <td>{{ dateCreated }}</td>
                <td><a href="/admin/apiKey/verify?id={{ _id }}">Verify</a></td>
                <td><a href="/admin/apiKey/delete?id={{ _id }}">Delete</a></td>
            </tr>
        {{/each}}
        </tbody>

    </table>

    <div id="token"></div>

    </div>

</div>

<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
