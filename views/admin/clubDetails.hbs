<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/admin">Administration</a></li>
    <li class="breadcrumb-item"><a href="/admin/clubs">Club Management</a></li>
    {{#if create}}
    <li class="breadcrumb-item active"  aria-current="page">New Club</li>
    {{else}}
    <li class="breadcrumb-item active"  aria-current="page">{{club.name}}</li>
    {{/if}}
  </ol>
</nav>

{{#if create}}
<h1>New Club</h1>
{{else}}
<h1>Club Details</h1>
{{/if}}

<form>

    {{#unless create}}
    <input type="text" id="club_id" value="{{club._id}}" hidden>
    <div class="form-group row">
        <label for="clubLastModified">Last Modified</label>
        <input class="form-control" type="text" id="clubLastModified" value="{{lastModified}}" readonly>
    </div>
    <div class="form-group row">
        <label for="clubCreated">Created</label>
        <input class="form-control" type="text" id="clubCreated" value="{{created}}" readonly>
    </div>
    {{/unless}}
    <div class="form-group row">
        <label for="clubName">Club Name</label>
        <input class="form-control" type="text" id="clubName" value="{{club.name}}">
    </div>


    <div class="form-group row">
        <label for="street">Street</label>
        <input class="form-control" type="text" id="street" value="{{club.address.street}}">
    </div>
    <div class="form-group row">
        <label for="zip">ZIP</label>
        <input class="form-control" type="text" id="zip" value="{{club.address.zip}}">
    </div>
    <div class="form-group row">
        <label for="city">City</label>
        <input class="form-control" type="text" id="city" value="{{club.address.city}}">
    </div>
    <div class="form-group row">
        <label for="country">Country</label>
        <input class="form-control" type="text" id="country" value="{{club.address.country}}">
    </div>

    <div class="form-group row">
        <label for="website">Website</label>
        <input class="form-control" type="text" id="website" value="{{club.contact.website}}">
    </div>
    <div class="form-group row">
        <label for="email">Email</label>
        <input class="form-control" type="text" id="email" value="{{club.contact.email}}">
    </div>
    <div class="form-group row">
        <label for="phone">Phone</label>
        <input class="form-control" type="text" id="phone" value="{{club.contact.phone}}">
    </div>

    
    {{#if create}}
    <button type="submit" class="btn btn-primary">Create</button>
    {{else}}
    <button type="submit" class="btn btn-primary">Submit</button>
    {{/if}}
    <button type="button" class="btn btn-secondary" id="cancel">Cancel</button>

</form>

{{#unless create}}
<p>
<table class="table table-sm table-striped table-hover">
    <caption>Club Courses</caption>
    <thead>
        <tr>
            <th>Name</th>
            <th>Holes</th>
        </tr>
    </thead>
    <tbody id="courses"></tbody>
</table>
</p>
{{/unless}}

<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
